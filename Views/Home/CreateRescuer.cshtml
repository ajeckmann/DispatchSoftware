@model Rescuer

@* <h6>Dispatcher: @ViewBag.UserLoggedIn.FirstName</h6><br> *@
<form asp-action="AvailablePersonnel" asp-controller="Home" asp-method="post">
    <input  class="btn btn-outline-info btn-sm" type="submit" value="Back to Available Personnel">
</form><br>


<h4>Enter New Rescuer Information</h4>
<form class="col-5 form-group" asp-action="AddRescuer" asp-controller="Home" method="post">

    <span asp-validation-for="FirstName"></span>
    <label asp-for="FirstName">First Name </label>
    <input asp-for="FirstName" class="form-control"><br>

    <span asp-validation-for="LastName"></span>
    <label asp-for="LastName">Last Name </label>
    <input asp-for="LastName" class="form-control"><br>

    <span asp-validation-for="Age"></span>
    <label asp-for="Age">Age </label>
    <input asp-for="Age" class="form-control"><br>

    <span asp-validation-for="Rank"></span>
    <label asp-for="Rank">Rescuer Rank: </label>
    <select asp-for="Rank">
        
        <option>EMT-B</option>
        <option>Paramedic</option>
        <option>FirefighterI</option>
        <option>FirefighterII</option>
        <option>Lieutenant</option>
        <option>SuperDuper Lieutenant</option>
    </select>

    <input asp-for="UserId" type="hidden" value="@ViewBag.Dispatcher.UserId">

    <input class="btn btn-outline-warning" type="submit" value="Create Rescuer">

</form>
