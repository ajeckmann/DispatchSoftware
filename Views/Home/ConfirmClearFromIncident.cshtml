@model Unit
<div class="row justify-content-center">
    <h1>Confirm Action</h1>

</div>

<div class="row h-100 justify-content-center">
    <div class="col-sm-5 my-auto">
        <div id="card" class="card card-block ">

            <div class="card-body">

                <h3>This action will:</h3>
                <ul>
                    <li><h3>Mark <span class="bold">@Model.NumberType@Model.Number</span> clear of the
                        <span class="bold">@ViewBag.IncidentRemovedFrom.Type</span> at <span
                            class="bold">@ViewBag.IncidentRemovedFrom.Location </span></h3>
                    </li>
                    <li>
                        <h3>Place <span class="bold"> @Model.NumberType@Model.Number</span> back in service (change status to "Available")</h3>
                    </li>
                </ol>  

                <div class="row justify-content-center">
                    <div class="col-auto">
                    <form asp-action="RemoveUnit" asp-route-unitId="@Model.UnitId"
                        asp-route-incidentId="@ViewBag.IncidentRemovedFrom.IncidentId">

                        <input type="submit" class="btn btn-success btn-lg" value="Clear @Model.NumberType@Model.Number">
                    </form>
                </div>
                <div class="col-auto">
                    <form asp-action="CancelRemoval" asp-controller="Home" asp-method="post">

                        <input type="submit" class="btn btn-dark btn-lg" value="Cancel">
                    </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<style>
    .bold {
        font-weight: bold;
        color: darkred;
    }
    #card{
        background-color: yellow;
        
    }
    h1{
        margin-top: 250px;
    }
   
</style>