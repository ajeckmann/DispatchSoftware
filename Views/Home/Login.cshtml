@model User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>

<body>
<div class="container">
    


<div class="row justify-content-around">

<h1>Register For Dispatcher Account Here</h1>

<a asp-action="Index" asp-controller="Home">Have an account? Click here to log in</a>

<form asp-action="Register" asp-controller="Home" asp-method="post">
    
    <span asp-validation-for="FirstName"></span><br>

    <label asp-for="FirstName">First Name</label>
    <input asp-for="FirstName"><br><br>

    <span asp-validation-for="LastName"></span><br>
    <label asp-for="LastName">Last Name</label>
    <input asp-for="LastName"><br>

    <span asp-validation-for="Email"></span><br>
    <label asp-for="Email">Email Address</label>
    <input asp-for="Email"><br>

    <span asp-validation-for="Password"></span><br>
    <label asp-for="Password">Password</label>
    <input asp-for="Password"><br>

    <span asp-validation-for="ConfirmPassword"></span><br>
    <label asp-for="ConfirmPassword">Confirm Your Password:</label>
    <input asp-for="ConfirmPassword"><br>

    <input type="submit" class="btn"value="Register Now">

    


</form>
</div>
</body>
