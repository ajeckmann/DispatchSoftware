                                    value="Assign @ViewBag.RescuerToAdd.Rank @ViewBag.RescuerToAdd.FirstName @ViewBag.RescuerToAdd.LastName to Medic">
                                <input asp-for="RescuerId" type="hidden" value="@ViewBag.RescuerToAdd.RescuerId">


                            </div>
                        </div>

                    </form><br>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
            <div class="col-4">
                <div class="card engine_background">
