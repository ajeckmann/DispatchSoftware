                                        value="Assign @ViewBag.RescuerToAdd.Rank @ViewBag.RescuerToAdd.FirstName @ViewBag.RescuerToAdd.LastName to Engine">
    
    
                                </div>
                            </div>
    
                        </form><br>
                    </div>
                </div>
            </div>
        </div>

    }
