@model Assignment

<body>


    <div class="row justify-content-between ">

        <div class="col text-center offset-1">
            <h3>Choose Assignment for @ViewBag.RescuerToAdd.Rank @ViewBag.RescuerToAdd.FirstName
                @ViewBag.RescuerToAdd.LastName </h3>
        </div>

        <div class="col-1">
            <form asp-action="AvailablePersonnel" asp-controller="Home" asp-method="post">
                <input class="btn btn-outline-info btn-sm " type="submit" value="Back">
            </form>
        </div>
    </div>



    @if(ViewBag.RescuerToAdd.Rank=="EMT-B")
    {
    <div class="row justify-content-center">
        <div class="col-4">
            <div class="card ambulance_background">
                <div class="card-header text-center">
                    <h3>Ambulances Available For Assignment</h3>
                </div>
                <div class="card-body text-center">

                    <form class="form-group  " asp-action="ProcessAssignment" asp-method="post">
                        <div class="row justify-content-center">
                            <div class="col-6 offset-2">
                                <Select class="form-control form-control-lg col-6 " asp-for="UnitId">
                                    @foreach(Unit a in ViewBag.Ambulances)
                                    {
                                    <option value=@a.UnitId>@a.NumberType@a.Number</option>
                                    }
                                </Select><br>
                            </div>
                        </div>
                        <div class="row justify-content-center">
                            <div class="col-8">
                                <input class="form-control form-control-lg btn btn-success assign_button " type="submit"
                                    value="Assign @ViewBag.RescuerToAdd.Rank @ViewBag.RescuerToAdd.FirstName @ViewBag.RescuerToAdd.LastName to Ambulance">
                                <input asp-for="RescuerId" type="hidden" value="@ViewBag.RescuerToAdd.RescuerId">


                            </div>
                        </div>

                    </form><br>
                </div>
            </div>
        </div>
    </div>
    }


    @if(ViewBag.RescuerToAdd.Rank== "Paramedic")
